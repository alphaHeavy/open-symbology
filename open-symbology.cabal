Name:                open-symbology
Version:             0.1
License:             BSD3
Author:              Steve Severance
Description:         An implementation of BSYM in Haskell.
homepage:            https://github.com/alphaHeavy/open-symbology
bug-reports:         https://github.com/alphaHeavy/open-symbology/issues
Maintainer:          sseverance@alphaheavy.com
Category:            Finance
Build-type:          Simple
Cabal-version:       >=1.10

Library
  Default-language: Haskell2010
  Exposed-modules: Finance.OpenSymbology
                   Finance.OpenSymbology.Parser
                   Finance.OpenSymbology.PricingSourceCategories
                   Finance.OpenSymbology.PricingSources
                   Finance.OpenSymbology.PricingSourceDescriptions
                   Finance.OpenSymbology.PricingSourceAbbreviations
                   Finance.OpenSymbology.PricingSourceParsers
                   Finance.OpenSymbology.Types
  Build-depends: attoparsec,
                 base < 5,
                 conduit,
                 mtl,
                 text

  GHC-Options:   -Wall -auto-all

source-repository head
  type:     git
  location: https://github.com/alphaHeavy/open-symbology.git
